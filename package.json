{
  "name": "pitch-cli",
  "version": "0.9.0",
  "description": "Zero-Configuration Convention-Driven Progressive Static Site Generator.",
  "homepage": "https://github.com/sirikon/pitch#readme",
  "bin": {
    "pitch": "out/bin/pitch.js"
  },
  "scripts": {
    "build": "cd src && tsc",
    "clean": "rm -rf out",
    "test": "npm run clean && npm run build && npm run test:unit && npm run test:e2e",
    "test:e2e": "cd test/e2e && node ./run.js",
    "test:unit": "cd test/unit && nyc mocha . && nyc report --reporter=html",
    "lint": "cd src && tslint -p .",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "Carlos Fdez. Llamas <hello@sirikon.me>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirikon/pitch.git"
  },
  "bugs": {
    "url": "https://github.com/sirikon/pitch/issues"
  },
  "devDependencies": {
    "diff": "~4.0.1",
    "dir-compare": "~1.7.2",
    "mocha": "~6.1.4",
    "tslint": "~5.18.0",
    "nyc": "~14.1.1",
    "typescript": "^3.5.3",
    "@types/ejs": "~2.5.1"
  },
  "dependencies": {
    "ansi-colors": "~4.1.1",
    "chokidar": "~3.0.2",
    "dart-sass": "^1.22.3",
    "ejs": "~2.6.2",
    "js-yaml": "~3.13.1",
    "mime-types": "~2.1.24",
    "remark-frontmatter": "~1.3.2",
    "remark-highlight.js": "~5.1.1",
    "remark-html": "~9.0.1",
    "remark-parse": "~6.0.3",
    "unified": "~8.0.1"
  }
}
